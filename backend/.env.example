# ===========================================
# ShareSathi Backend â€” Environment Variables
# ===========================================
# Copy this file to .env and fill in values.
# All values shown are development defaults.

# ---------- Core ----------
SECRET_KEY=change-me-use-a-long-random-string
APP_NAME=ShareSathi
APP_VERSION=0.2.0
DEBUG=true

# ---------- Database ----------
# SQLite (dev):
DATABASE_URL=sqlite+aiosqlite:///./sharesathi_dev.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sharesathi

# ---------- Redis ----------
REDIS_URL=redis://localhost:6379/0

# ---------- Auth / JWT ----------
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- CORS ----------
# Comma-separated origins, or * for development
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ---------- Rate Limiting ----------
RATE_LIMIT_PER_MINUTE=60

# ---------- External APIs (optional) ----------
# APIFY_API_KEY=your_apify_key_here
# NEWS_API_KEY=your_news_api_key_here

# ---------- InsForge Sync ----------
INSFORGE_BASE_URL=https://your-app.region.insforge.app
INSFORGE_ANON_KEY=your-insforge-anon-key
